parseCsv(){
  find -iname "*.csv" | xargs cat | cut -d"," -f2,4- | awk -F, 'BEGIN { OFS=FS }; { $1=substr($1, 1, 110); print}' | sort -t, -k 5,5 -n -u | vim - 
}
